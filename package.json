{
  "name": "smart-dj",
  "version": "1.0.0",
  "description": "AI-Powered Music Application with Spotify and YouTube Music integration",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:mobile && npm run install:shared",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:shared": "cd shared && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:mobile",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:shared": "cd shared && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:shared",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:shared": "cd shared && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:mobile",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules mobile/node_modules shared/node_modules frontend/dist backend/dist mobile/dist shared/dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BWolf-16/Smart-DJ.git"
  },
  "keywords": [
    "music",
    "ai",
    "spotify",
    "youtube-music",
    "react",
    "node.js",
    "typescript",
    "recommendation-engine"
  ],
  "author": "BWolf",
  "license": "MIT"
}